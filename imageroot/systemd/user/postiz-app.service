[Unit]
Description=Podman postiz-app.service
BindsTo=postiz.service
After=postiz.service postiz-postgres-app.service postiz-redis-app.service

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
EnvironmentFile=%S/state/environment
EnvironmentFile=-%S/state/smarthost.env
WorkingDirectory=%S/state
Restart=always
TimeoutStopSec=70
ExecStartPre=/bin/mkdir -p tmp
ExecStartPre=/bin/rm -f %t/postiz-app.pid %t/postiz-app.ctr-id
ExecStartPre=-runagent discover-smarthost
ExecStart=/usr/bin/podman run \
    --conmon-pidfile %t/postiz-app.pid \
    --cidfile %t/postiz-app.ctr-id \
    --cgroups=no-conmon \
    --pod-id-file %t/postiz.pod-id \
    --replace \
    -d \
    --name postiz-app \
    --volume postiz-config:/config/:Z \
    --volume postiz-uploads:/uploads/:Z \
    --env-file postiz.env \
    --env-file postiz-app.env \
    ${POSTIZ_APP_IMAGE}
ExecStop=/usr/bin/podman stop --ignore --cidfile %t/postiz-app.ctr-id -t 10
ExecReload=/usr/bin/podman kill -s HUP postiz-app
SyslogIdentifier=%u
ExecStopPost=/usr/bin/podman rm --ignore -f --cidfile %t/postiz-app.ctr-id
PIDFile=%t/postiz-app.pid
Type=forking

[Install]
WantedBy=default.target
