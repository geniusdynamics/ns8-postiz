set -e

if ! systemctl --user -q is-active postiz.service; then
	exit 0
fi
echo "Dumping  postgres database"
podman exec postiz-postgres-app pg_dump -U postgres --format=c  postiz-postgres > postiz-postgres.pg_dump
echo "Dumping  postgres database"
podman exec temporal-postgresql-app pg_dump -U postgres --format=c  temporal-postgresql > temporal-postgresql.pg_dump
